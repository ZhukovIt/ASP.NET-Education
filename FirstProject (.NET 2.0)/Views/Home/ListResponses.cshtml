@model IEnumerable<PartyInvites.Models.GuestResponse>
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Responses</title>
    </head>
    <body>
        <h2>Список людей, которые придут на вечеринку:</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (PartyInvites.Models.GuestResponse gR in Model)
                {
                    <tr>
                        <td>@gR.Name</td>
                        <td>@gR.Email</td>
                        <td>@gR.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</html>