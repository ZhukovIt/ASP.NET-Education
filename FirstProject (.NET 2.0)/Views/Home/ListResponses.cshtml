@model IEnumerable<PartyInvites.Models.GuestResponse>
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Responses</title>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
        <div class="panel-body">
            <h2>Список людей, которые придут на вечеринку:</h2>
            <table class="table table-sm table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PartyInvites.Models.GuestResponse gR in Model)
                    {
                        <tr>
                            <td>@gR.Name</td>
                            <td>@gR.Email</td>
                            <td>@gR.Phone</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
</html>